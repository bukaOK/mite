                    <h2 class="ui inverted header">Это всегда будет бесплатно</h2>
                    @Html.ActionLink("Регистрация", "Register", "Account", null, new { @class = "ui violet inverted large circular button" })
                </div>
            </div>
            <div class="ui section divider"></div>
            <div class="ui basic segment stackable center aligned grid">
                <div class="four wide column">
                    <h3 class="ui header">Теги</h3>
                    <div class="ui link list" role="list">
                        @Html.ActionLink("Все работы", "Top", "Posts", null, new { @class = "item", role = "listitem" })
