        <div class="sides">
            <div class="author side">
                <div class="ui center aligned chose dimmer">
                    <div class="content">
                        <h2 class="ui inverted header">
                            <span class="content">Я - автор</span>
                            <span class="sub header">
                                Публикация работ, продажа услуг, заработок на рекламе и многое другое.
                            </span>
                        </h2>
                        <button class="ui chose circular red inverted basic button">Выбрать</button>
                    </div>
                </div>
                <div class="ui center aligned reg dimmer">
                    <div class="content">
                        <h2 class="ui inverted header">
                            <span class="content">MiteGroup</span>
                            <span class="sub header">Создавай вместе с нами.</span>
                        </h2>
                        @Html.ActionLink("Регистрация", "Register", "Account", null, new { @class = "ui circular violet inverted button" })
                    </div>
                </div>
                @Html.ActionLink("Автор: NightArt", "Index", "UserProfile", new { name = "NightArt" }, new { @class = "author" })
            </div>
            <div class="client side">
                <div class="ui center aligned chose dimmer">
                    <div class="content">
                        <h2 class="ui inverted header">
                            <span class="content">Я - клиент</span>
                            <span class="sub header">
                                Выбор автора для заказов в любой сфере искусства.
                            </span>
