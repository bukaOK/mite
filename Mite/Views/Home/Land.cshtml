                            <div class="user example">
                                <a class="image" href="@Url.Action("Index", "UserProfile", new { name = item.UserName })" style="background-image: url(@item.AvatarSrc)"></a>
                                @Html.ActionLink(item.UserName, "Index", "UserProfile", new { name = item.UserName }, new { @class = "content" })
