    <script>
        $(function () {
            $('.ui.dropdown').dropdown();
            $('.chose.button').click(function () {
                var side = $(this).parents('.side').addClass('active'),
                    isAuthor = side.hasClass('author');
                side.siblings('.side').width(0).find('.author').hide();
                if (window.innerHeight > window.innerWidth)
                    side.siblings('.side').height(0);
                if (isAuthor) {
                    $('.author.wrap').css('margin-top', window.innerHeight).addClass('active');
                } else {
                    $('.client.wrap').css('margin-top', window.innerHeight).addClass('active');
                }
                $('.reg.wrap').show();
                $('.ui.progress').progress({
                    showActivity: false
                });

                var waveSize = $('.reg.box').width() + 300;
                $('.wave').width(waveSize).height(waveSize);
            });
        });
    </script>
