@{
    ViewBag.Title = "Настройки";
}
<div class="ui segment">
    <h2 class="ui dividing header">
        Настройки
    </h2>
    <nav class="ui stackable pointing secondary tabs menu" style="border: none">
        <a class="active item" data-tab="profile">Профиль</a>
        <a class="item" data-tab="changeavatar">Изменить аватар</a>
        <a class="item" data-tab="security">Безопасность</a>
        <a class="item" data-tab="externalservices">Внешние сервисы</a>
    </nav>
    <div class="ui tab" data-tab="profile">
        @Html.Action("UserProfile")
    </div>
    <div class="ui tab" data-tab="changeavatar">
        @Html.Partial("ChangeAvatar")
    </div>
    <div class="ui tab" data-tab="security">
        <div class="ui stackable basic segment grid">
            <div class="six wide column">
                @Html.Partial("_ChangePass", new Mite.Models.ChangePassModel())
            </div>
            <div class="six wide column">
                @Html.Action("EmailSettings", "UserSettings")
            </div>
        </div>
    </div>
    <div class="ui tab" data-tab="externalservices">
        @Html.Action("SocialServices")
    </div>
</div>
<script>
    $(function () {
            $('#userSettingsItem').addClass('active');
            $('.ui.tabs.menu .item')
                .tab({
                    history: true,
                    historyType: 'hash'
                });
            ViewHelper.disableFormSubmitting('form');
        });
</script>
